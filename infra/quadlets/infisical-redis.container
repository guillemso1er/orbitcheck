[Unit]
Description=Infisical Redis

[Container]
Remove=false
Image=docker.io/library/redis:7.2.5
ContainerName=infisical-redis
Pod=orbitcheck.pod
Volume=/var/lib/containers/volumes/infisical-redis-data:/data:Z,U
Label="io.containers.autoupdate=image"
NoNewPrivileges=yes

[Service]
Restart=always
ExecStartPre=mkdir -p /var/lib/containers/volumes/infisical-redis-data

[Install]
WantedBy=default.target