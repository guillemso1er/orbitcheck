[Unit]
Description=Loki
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/grafana/loki:2.9.8
ContainerName=loki
Pod=myapp
Volume=/srv/myapp/loki/config:/etc/loki:Z
Volume=/srv/myapp/loki/data:/loki:Z,U
ContainerAutoUpdate=registry
NoNewPrivileges=yes

[Service]
Restart=always

[Install]
WantedBy=default.target