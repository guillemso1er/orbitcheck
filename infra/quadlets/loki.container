[Unit]
Description=Loki
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/grafana/loki:2.9.8
ContainerName=loki
Pod=orbitcheck
Volume=/var/lib/containers/volumes/loki-config:/etc/loki:Z
Volume=/var/lib/containers/volumes/loki-data:/loki:Z,U
ContainerAutoUpdate=registry
NoNewPrivileges=yes

[Service]
Restart=always

[Install]
WantedBy=default.target