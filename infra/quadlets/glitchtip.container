[Unit]
Description=Glitchtip
After=postgres.service valkey.service
Wants=postgres.service valkey.service

[Container]
LogDriver=journald
Image=docker.io/glitchtip/glitchtip:latest
ContainerName=glitchtip
Pod=orbitcheck.pod
EnvironmentFile=/srv/myapp/glitchtip/env/glitchtip.env
Volume=/var/lib/containers/volumes/glitchtip-data:/data:Z,U
Label="io.containers.autoupdate=image"
NoNewPrivileges=yes

[Service]
Restart=always
ExecStartPre=mkdir -p /var/lib/containers/volumes/glitchtip-data

[Install]
WantedBy=default.target