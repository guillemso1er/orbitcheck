generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // 2. Define available schemas
  schemas  = ["shopify"]
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  // 3. Map this model to the specific schema
  @@schema("shopify")
}
