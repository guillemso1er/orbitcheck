<script>
  // Billing toggle functionality
  const toggle = document.getElementById('billing-toggle');
  const thumb = document.getElementById('toggle-thumb');
  const monthlyLabel = document.getElementById('label-monthly');
  const annualLabel = document.getElementById('label-annual');
  const monthlyPrices = document.querySelectorAll('.price-monthly');
  const annualPrices = document.querySelectorAll('.price-annual');

  toggle?.addEventListener('click', () => {
    const isAnnual = toggle.getAttribute('aria-checked') === 'true';
    toggle.setAttribute('aria-checked', String(!isAnnual));

    if (!isAnnual) {
      // Switch to annual
      thumb?.classList.remove('translate-x-0');
      thumb?.classList.add('translate-x-5');
      toggle.classList.remove('bg-gray-200', 'dark:bg-gray-700');
      toggle.classList.add('bg-indigo-600');
      monthlyLabel?.classList.remove('text-gray-900', 'dark:text-gray-100');
      monthlyLabel?.classList.add('text-gray-500', 'dark:text-gray-400');
      annualLabel?.classList.remove('text-gray-500', 'dark:text-gray-400');
      annualLabel?.classList.add('text-gray-900', 'dark:text-gray-100');
      monthlyPrices.forEach((el) => el.classList.add('hidden'));
      annualPrices.forEach((el) => el.classList.remove('hidden'));
    } else {
      // Switch to monthly
      thumb?.classList.remove('translate-x-5');
      thumb?.classList.add('translate-x-0');
      toggle.classList.remove('bg-indigo-600');
      toggle.classList.add('bg-gray-200', 'dark:bg-gray-700');
      monthlyLabel?.classList.remove('text-gray-500', 'dark:text-gray-400');
      monthlyLabel?.classList.add('text-gray-900', 'dark:text-gray-100');
      annualLabel?.classList.remove('text-gray-900', 'dark:text-gray-100');
      annualLabel?.classList.add('text-gray-500', 'dark:text-gray-400');
      monthlyPrices.forEach((el) => el.classList.remove('hidden'));
      annualPrices.forEach((el) => el.classList.add('hidden'));
    }
  });
</script>
