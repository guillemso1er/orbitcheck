<header
  class="bg-white/95 backdrop-blur-md border-b border-gray-100 dark:bg-gray-800/95 dark:border-gray-700 sticky top-0 z-50 no-print"
  role="banner"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center justify-between" aria-label="Main navigation">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center gap-3 group focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-lg p-1 -m-1"
      >
        <div
          class="w-14 h-14 sm:w-16 sm:h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
        >
          <img src="./logo.svg" alt="" width="64" height="64" loading="eager" />
        </div>
        <span class="font-extrabold text-2xl tracking-tight">Orbitcheck</span>
      </a>
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <a
          href="#features"
          class="text-gray-700 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 transition-colors font-medium"
        >
          Product
        </a>
        <a
          href="#pricing"
          class="text-gray-700 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 transition-colors font-medium"
        >
          Pricing
        </a>
        <a
          href="/docs"
          class="text-gray-700 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 transition-colors font-medium"
        >
          Docs
        </a>
        <a
          href="/changelog"
          class="text-gray-700 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 transition-colors font-medium"
        >
          Changelog
        </a>
        <a
          href="/early-access"
          class="font-semibold text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors"
        >
          Early Access
        </a>
      </div>

      <!-- Desktop Actions -->
      <div class="hidden lg:flex items-center gap-4">
        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          type="button"
          class="p-2.5 rounded-lg text-gray-700 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-300 dark:hover:text-gray-100 dark:hover:bg-gray-700 transition-all focus:outline-none focus:ring-2 focus:ring-indigo-500"
          aria-label="Toggle dark mode"
        >
          <!-- Moon icon for light mode -->
          <svg
            id="theme-icon-light"
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            ></path>
          </svg>
          <!-- Sun icon for dark mode -->
          <svg
            id="theme-icon-dark"
            class="w-5 h-5 hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </button>

        <a
          href="#pricing"
          class="inline-flex items-center justify-center px-5 py-2.5 rounded-lg font-semibold text-indigo-700 border-2 border-indigo-200 hover:border-indigo-300 hover:bg-indigo-50 dark:text-indigo-400 dark:border-indigo-600 dark:hover:border-indigo-500 dark:hover:bg-indigo-900/30 transition-all"
        >
          See Pricing
        </a>

        <a
          href="https://dashboard.orbitcheck.io/"
          class="inline-flex items-center justify-center px-5 py-2.5 rounded-lg font-semibold gradient-bg text-white hover:opacity-90 transition-all shadow-lg shadow-indigo-500/25 hover:shadow-xl hover:shadow-indigo-500/30 btn-shine"
        >
          Start Free
          <svg
            class="ml-1.5 w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        type="button"
        class="lg:hidden p-2 rounded-lg text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation menu"
      >
        <svg
          id="menu-icon-open"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg
          id="menu-icon-close"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden mt-4 pb-4 border-t border-gray-100 dark:border-gray-700 pt-4"
    >
      <div class="flex flex-col gap-2">
        <a
          href="#features"
          class="px-4 py-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 font-medium transition-colors"
        >
          Product
        </a>
        <a
          href="#pricing"
          class="px-4 py-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 font-medium transition-colors"
        >
          Pricing
        </a>
        <a
          href="/docs/index.html"
          class="px-4 py-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 font-medium transition-colors"
        >
          Docs
        </a>
        <a
          href="/changelog.html"
          class="px-4 py-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 font-medium transition-colors"
        >
          Changelog
        </a>
        <a
          href="https://status.orbitcheck.io"
          class="px-4 py-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 font-medium transition-colors"
        >
          Status
        </a>

        <div
          class="border-t border-gray-100 dark:border-gray-700 mt-2 pt-4 flex flex-col gap-3"
        >
          <div class="flex items-center justify-between px-4">
            <span class="font-medium">Dark mode</span>
            <button
              id="theme-toggle-mobile"
              type="button"
              class="p-2 rounded-lg text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors"
              aria-label="Toggle dark mode"
            >
              <svg
                class="w-5 h-5 dark:hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                ></path>
              </svg>
              <svg
                class="w-5 h-5 hidden dark:block"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                ></path>
              </svg>
            </button>
          </div>

          <a
            href="https://dashboard.orbitcheck.io/"
            class="mx-4 inline-flex items-center justify-center px-5 py-3 rounded-lg font-semibold gradient-bg text-white"
          >
            Start Free
            <svg
              class="ml-1.5 w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
