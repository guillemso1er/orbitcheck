---
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="Thanks — Orbitcheck"
  description="Thank you for your interest in Orbitcheck. Start your free trial today."
  canonical="https://orbitcheck.io/thanks"
>
  <main
    class="bg-gray-50 dark:bg-gray-900 flex-1 flex items-center justify-center"
  >
    <section class="max-w-2xl mx-auto px-4 py-24 text-center">
      <div class="mb-6">
        <svg
          class="w-16 h-16 mx-auto text-green-500"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-extrabold">Thanks — we got your request</h1>
      <p class="mt-3 text-gray-700 dark:text-gray-300">
        We'll reach out shortly. Meanwhile, you can start your free plan.
      </p>
      <a
        href="https://dashboard.orbitcheck.io/"
        class="mt-6 inline-flex items-center justify-center px-6 py-3 rounded-md font-semibold bg-indigo-600 text-white hover:bg-indigo-700"
      >
        Start free
        <svg
          class="ml-2 w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </section>
  </main>
</Layout>
