---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout
  title="Early Access â€” Orbitcheck"
  description="Join Orbitcheck's early access program. Get first access to new features and exclusive benefits."
  canonical="https://orbitcheck.io/early-access"
>
  <main class="bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="relative overflow-hidden py-20 sm:py-28">
      <div
        class="absolute inset-0 bg-gradient-to-br from-indigo-100 via-white to-purple-100 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900"
      >
      </div>
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <span
          class="inline-flex items-center rounded-full bg-indigo-100 px-4 py-1.5 text-sm font-semibold text-indigo-700 dark:bg-indigo-900/50 dark:text-indigo-300 mb-6"
        >
          ðŸš€ Limited spots available
        </span>
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight"
        >
          Join the Early Access Program
        </h1>
        <p
          class="mt-6 text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
        >
          Be among the first to experience Orbitcheck's data validation
          platform. Get exclusive access to new features, priority support, and
          founding member pricing.
        </p>
      </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-center mb-12">
          What's included in Early Access
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div
              class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-xl flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-indigo-600 dark:text-indigo-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Priority Access</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              First access to new validation types and integrations before
              public release.
            </p>
          </div>
          <div class="text-center">
            <div
              class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-xl flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-indigo-600 dark:text-indigo-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Direct Support</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Slack channel access to the founding team for questions and
              feedback.
            </p>
          </div>
          <div class="text-center">
            <div
              class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-xl flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-indigo-600 dark:text-indigo-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Founding Pricing</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Lock in special early access pricing that stays with you forever.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Application Form -->
    <section class="py-16">
      <div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
          <h2 class="text-2xl font-bold text-center mb-6">
            Apply for Early Access
          </h2>
          <form id="early-access-form" class="space-y-4">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                >Full name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100"
                placeholder="Jane Smith"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                >Work email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100"
                placeholder="jane@company.com"
              />
            </div>
            <div>
              <label
                for="company"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                >Company</label
              >
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100"
                placeholder="Acme Corp"
              />
            </div>
            <div>
              <label
                for="orders"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                >Monthly order volume</label
              >
              <select
                id="orders"
                name="orders"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100"
              >
                <option value="">Select...</option>
                <option value="<1000">Less than 1,000</option>
                <option value="1000-10000">1,000 â€“ 10,000</option>
                <option value="10000-50000">10,000 â€“ 50,000</option>
                <option value=">50000">More than 50,000</option>
              </select>
            </div>
            <div>
              <label
                for="use-case"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                >What problem are you trying to solve?</label
              >
              <textarea
                id="use-case"
                name="use-case"
                rows="3"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100"
                placeholder="Tell us about your use case..."></textarea>
            </div>
            <button
              type="submit"
              id="submit-btn"
              class="w-full py-3 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors"
            >
              Apply for early access
            </button>
          </form>
          <p class="mt-4 text-xs text-gray-500 dark:text-gray-400 text-center">
            By applying, you agree to our <a href="/legal/tos" class="underline"
              >Terms</a
            > and <a href="/legal/privacy" class="underline">Privacy Policy</a>.
          </p>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-center mb-12">
          What early users are saying
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <blockquote class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "Finally, an address validation tool that actually understands
              Spanish addresses. The NIF/NIE validation saved us hours of manual
              verification."
            </p>
            <footer class="mt-4 flex items-center gap-3">
              <div
                class="w-10 h-10 bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400 font-semibold"
              >
                M
              </div>
              <div>
                <cite class="not-italic font-semibold">Maria G.</cite>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Ops Lead, Fashion Retailer
                </p>
              </div>
            </footer>
          </blockquote>
          <blockquote class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "We reduced RTO rates by 23% in the first month. The API is clean
              and the response times are excellent."
            </p>
            <footer class="mt-4 flex items-center gap-3">
              <div
                class="w-10 h-10 bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400 font-semibold"
              >
                R
              </div>
              <div>
                <cite class="not-italic font-semibold">Ricardo T.</cite>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  CTO, E-commerce Platform
                </p>
              </div>
            </footer>
          </blockquote>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-center mb-10">
          Frequently asked questions
        </h2>
        <div class="space-y-4">
          <details
            class="group rounded-lg border border-gray-200 dark:border-gray-700 p-4 bg-white dark:bg-gray-800"
          >
            <summary
              class="flex cursor-pointer items-center justify-between font-medium"
            >
              When will I get access?
              <svg
                class="h-5 w-5 transition-transform group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-3 text-gray-600 dark:text-gray-300">
              We're reviewing applications on a rolling basis. Most applicants
              receive access within 1-2 business days.
            </p>
          </details>
          <details
            class="group rounded-lg border border-gray-200 dark:border-gray-700 p-4 bg-white dark:bg-gray-800"
          >
            <summary
              class="flex cursor-pointer items-center justify-between font-medium"
            >
              Is early access free?
              <svg
                class="h-5 w-5 transition-transform group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-3 text-gray-600 dark:text-gray-300">
              Yes! Early access includes a generous free tier. We offer special
              founding member pricing for paid plans.
            </p>
          </details>
          <details
            class="group rounded-lg border border-gray-200 dark:border-gray-700 p-4 bg-white dark:bg-gray-800"
          >
            <summary
              class="flex cursor-pointer items-center justify-between font-medium"
            >
              What happens after early access ends?
              <svg
                class="h-5 w-5 transition-transform group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-3 text-gray-600 dark:text-gray-300">
              Early access members keep their founding member pricing forever.
              You'll transition seamlessly to a paid plan with no data loss.
            </p>
          </details>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  const form = document.getElementById('early-access-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Submitting...';

    // Simulate form submission (replace with actual API call)
    await new Promise((resolve) => setTimeout(resolve, 1000));

    // Redirect to thanks page
    window.location.href = '/thanks';
  });
</script>
