{
    "name": "@orbitcheck/api",
    "private": true,
    "version": "0.1.0",
    "description": "Orbitcheck API service (Fastify)",
    "type": "module",
    "main": "dist/server.js",
    "files": [
        "dist",
        "migrations"
    ],
    "license": "UNLICENSED",
    "packageManager": "pnpm@9.12.1",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
        "infra": "podman compose -f ../../infra/compose/dev.compose.yml up -d",
        "build": "tsc -p tsconfig.json",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "start": "cross-env NODE_ENV=production NODE_OPTIONS=--enable-source-maps node dist/server.js",
        "migrate:local": "node-pg-migrate -m ./migrations --envPath .env.local up",
        "migrate:dev": "node-pg-migrate -m ./migrations --envPath .env.dev up",
        "migrate:ci": "export DATABASE_URL=$MIGRATION_DATABASE_URL && node-pg-migrate -s api -m ./migrations up",
        "migrate:create": "node-pg-migrate create -m ./migrations",
        "db:init": "tsx ./src/jobs/refreshDisposable.ts",
        "generate:endpoints": "tsx src/generate-endpoints.ts",
        "test": " NODE_ENV=test jest",
        "test:watch": "jest --watch",
        "test:int": "export DOCKER_HOST=\"unix://$(podman info --format '{{.Host.RemoteSocket.Path}}')\" && vitest ./tests/*.int.test.ts --run",
        "test:int:watch": "vitest tests/tasks.int.test.ts",
        "lint": "eslint src/ --max-warnings=0",
        "lint:fix": "eslint src/ --fix",
        "ci:install": "pnpm install --frozen-lockfile",
        "ci:check": "pnpm run lint && pnpm run typecheck && pnpm test && pnpm run build",
        "prune:prod": "pnpm prune --prod"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.896.0",
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "11.1.0",
        "@fastify/etag": "^6.1.0",
        "@fastify/helmet": "^13.0.0",
        "@fastify/secure-session": "^8.2.0",
        "@fastify/swagger": "^9.5.2",
        "@fastify/swagger-ui": "^5.2.3",
        "@hapi/address": "^5.1.1",
        "@hapi/tlds": "^1.1.3",
        "@immobiliarelabs/fastify-metrics": "^7.0.0",
        "@infisical/sdk": "^4.0.6",
        "@orbitcheck/contracts": "workspace:^",
        "@scalar/fastify-api-reference": "^1.38.1",
        "@sentry/node": "^10.15.0",
        "@sinclair/typebox": "^0.34.41",
        "@types/nodemailer": "^7.0.3",
        "ajv": "^8.17.1",
        "argon2": "^0.44.0",
        "bcryptjs": "3.0.2",
        "bullmq": "^5.58.9",
        "dotenv": "^17.2.2",
        "envalid": "^8.1.0",
        "express-openapi-validator": "^5.6.0",
        "fastify": "5.6.1",
        "fastify-plugin": "5.0.1",
        "ioredis": "5.8.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "1.12.22",
        "lru-cache": "11.2.2",
        "node-cron": "^4.2.1",
        "node-pg-migrate": "8.0.3",
        "nodemailer": "^7.0.10",
        "pg": "8.16.3",
        "pino": "9.11.0",
        "postal": "^2.0.6",
        "rate-limiter-flexible": "8.0.1",
        "soap": "1.4.1",
        "stripe": "^19.1.0",
        "tldts": "^7.0.16",
        "twilio": "^5.10.1",
        "uuid": "13.0.0",
        "validator": "^13.15.15",
        "zod": "4.1.11"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.27.1",
        "@testcontainers/postgresql": "^11.7.2",
        "@testcontainers/redis": "^11.7.2",
        "@types/bcryptjs": "^3.0.0",
        "@types/jest": "30.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "24.5.2",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.15.5",
        "@types/supertest": "6.0.3",
        "@types/validator": "^13.15.3",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "add-js-extension": "^1.0.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-n": "^17.23.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-regexp": "^2.10.0",
        "eslint-plugin-security": "^1.7.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-sonarjs": "^0.24.0",
        "eslint-plugin-unicorn": "^52.0.0",
        "jest": "30.1.3",
        "jest-pnp-resolver": "^1.2.3",
        "pino-pretty": "^13.1.1",
        "supertest": "7.1.4",
        "testcontainers": "^11.7.2",
        "ts-jest": "29.4.4",
        "ts-jest-mock-import-meta": "^1.3.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "2.0.0",
        "tsx": "^4.20.6",
        "typescript": "5.9.2",
        "vitest": "^4.0.7"
    }
}