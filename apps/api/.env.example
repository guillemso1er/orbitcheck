# Orbitcheck API Environment Configuration
# Copy this file to .env.local and fill in the values

# Server Configuration
API_PORT=8080
API_LOG_LEVEL=info

# Database
# API_DATABASE_URL=postgresql://postgres:your_password@localhost:5432/orbitcheck

# Redis/Valkey
# API_REDIS_URL=redis://localhost:6379

# External Services (Optional)
API_NOMINATIM_URL=https://nominatim.openstreetmap.org
API_LOCATIONIQ_KEY=your_locationiq_key
API_DISPOSABLE_LIST_URL=https://raw.githubusercontent.com/disposable/disposable-email-domains/master/domains.json
API_VIES_WSDL_URL=https://ec.europa.eu/taxation_customs/vies/checkVatService.wsdl

# Monitoring/Error Tracking
# API_SENTRY_DSN=your_sentry_dsn

# Data Retention & Rate Limiting
API_RETENTION_DAYS=90
API_RATE_LIMIT_COUNT=30000

# Twilio (for OTP/Phone Verification)
# API_TWILIO_ACCOUNT_SID=your_twilio_sid
# API_TWILIO_AUTH_TOKEN=your_twilio_token
# API_TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_sid
# API_TWILIO_PHONE_NUMBER=your_twilio_number

# Object Storage (MinIO/S3)
API_S3_ENDPOINT=http://localhost:9000
API_S3_ACCESS_KEY=minioadmin
API_S3_SECRET_KEY=minioadmin
API_S3_BUCKET=orbitcheck

# Geocoding Fallback
API_GOOGLE_GEOCODING_KEY=your_google_geocoding_key
API_USE_GOOGLE_FALLBACK=false

# Security
# API_JWT_SECRET=your_jwt_secret_here_at_least_32_characters_long
# API_ENCRYPTION_KEY=your_32_byte_encryption_key_here
# API_SESSION_SECRET=your_session_secret

# OIDC Configuration (Optional)
API_OIDC_ENABLED=false
API_OIDC_CLIENT_ID=your_oidc_client_id
API_OIDC_CLIENT_SECRET=your_oidc_client_secret
API_OIDC_PROVIDER_URL=https://your-oidc-provider.com
API_OIDC_REDIRECT_URI=http://localhost:8080/auth/callback

# Stripe (for billing)
API_STRIPE_SECRET_KEY=sk_test_dummy
API_STRIPE_BASE_PLAN_PRICE_ID=price_dummy
API_STRIPE_USAGE_PRICE_ID=price_dummy
API_STRIPE_STORE_ADDON_PRICE_ID=price_dummy
API_FRONTEND_URL=http://localhost:5173

# Infisical (for secret management)
API_INFISICAL_PROJECT_ID=your_infisical_project_id
API_INFISICAL_ENVIRONMENT=dev
API_INFISICAL_SITE_URL=https://app.infisical.com