{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "ES2022",
            "DOM"
        ],
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "rootDir": "src",
        "types": [
            "node",
            "jest"
        ],
        "baseUrl": ".",
        "paths": {
            "@orbitcheck/contracts": [
                "../../packages/contracts/dist"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}