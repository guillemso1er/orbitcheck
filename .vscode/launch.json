{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Fastify API",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/apps/api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug React App",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/dashboard",
      "preLaunchTask": "Start React App"
    },
        {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Shopify App",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/shopify-app",
      "preLaunchTask": "Start Shopify App"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vitest: current file (Podman, debug)",
      "program": "${workspaceFolder}/apps/api/node_modules/vitest/vitest.mjs",
      "cwd": "${workspaceFolder}/apps/api",
      "args": [
        "run",
        "--no-file-parallelism",
        "${file}"
      ],
      "env": {
        "PATH": "${workspaceFolder}/apps/api/node_modules/.bin:${env:PATH}",
        "DOCKER_HOST": "unix:///run/user/1000/podman/podman.sock",
        "TESTCONTAINERS_RYUK_DISABLED": "true"
      },
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest API Tests",
      "program": "${workspaceFolder}/apps/api/node_modules/jest/bin/jest.js",
      "args": [
        "--config",
        "${workspaceFolder}/apps/api/jest.config.mjs",
        "--runInBand",
        "${file}"
      ],
      "cwd": "${workspaceFolder}/apps/api/",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Dashboard Tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--config",
        "${workspaceFolder}/apps/dashboard/jest.config.ts",
        "--runInBand",
        "${file}"
      ],
      "cwd": "${workspaceFolder}/apps/dashboard",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Debug Fastify API",
        "Debug React App"
      ],
      "stopAll": true
    }
  ]
}