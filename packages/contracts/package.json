{
  "name": "@orbitcheck/contracts",
  "version": "0.1.0",
  "description": "OpenAPI contracts and shared types for OrbitCheck services",
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./node": {
      "types": "./dist/src/node.d.ts",
      "import": "./dist/src/node.js",
      "default": "./dist/src/node.js"
    },
    "./api-client": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./openapi.v1.json": {
      "import": "./dist/openapi.v1.json",
      "default": "./dist/openapi.v1.json"
    }
  },
  "files": [
    "dist",
    "dist/openapi.yaml",
    "dist/openapi.v1.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "validate": "openapi-typescript openapi.yaml --strict",
    "lint": "eslint src/",
    "prepare": "pnpm run build",
    "lint:oas": "redocly lint openapi/v1/openapi.yml",
    "bundle:v1": "redocly bundle openapi/v1/openapi.yml --dereferenced --output dist/openapi.v1.json",
    "gen:client": "openapi-ts",
    "compile": "tsc --project tsconfig.json",
    "build": "pnpm lint:oas && pnpm bundle:v1 && pnpm gen:client && pnpm compile",
    "watch": "concurrently -n oas,gen \"redocly bundle openapi/v1/openapi.yml --dereferenced --output dist/openapi.v1.json --watch\" \"openapi --config openapi-ts.client.config.ts --watch\""
  },
  "dependencies": {
    "@redocly/cli": "^1.25.5",
    "axios": "^1.7.9",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.87.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.5.2",
    "eslint": "^8.57.1",
    "js-yaml": "^4.1.0",
    "openapi-to-postmanv2": "^5.3.3",
    "openapi-typescript": "^7.4.0",
    "orval": "^7.0.1",
    "typescript": "5.9.2"
  }
}