{
  "name": "@orbitcheck/contracts",
  "version": "0.1.0",
  "description": "OpenAPI contracts and shared types for OrbitCheck services",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./routes": {
      "types": "./dist/routes.d.ts",
      "import": "./dist/routes.js",
      "default": "./dist/routes.js"
    },
    "./api-client": {
      "types": "./dist/api-client/orbitCheckAPI.d.ts",
      "import": "./dist/api-client/orbitCheckAPI.js",
      "default": "./dist/api-client/orbitCheckAPI.js"
    }
  },
  "files": [
    "dist",
    "dist/openapi.yaml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "validate": "openapi-typescript openapi.yaml --strict",
    "lint": "eslint src/",
    "build": "node build.js",
    "prepare": "npm run build"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.5.2",
    "eslint": "^8.57.1",
    "js-yaml": "^4.1.0",
    "openapi-to-postmanv2": "^5.3.3",
    "openapi-typescript": "^7.4.0",
    "orval": "^7.0.1",
    "typescript": "5.9.2"
  }
}