# Orbicheck Environment Configuration
# Copy this file to .env and fill in the values

# Server Configuration
PORT=8080
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/orbicheck

# Redis/Valkey
REDIS_URL=redis://localhost:6379

# External Services (Optional)
LOCATIONIQ_KEY=your_locationiq_key
GOOGLE_GEOCODING_KEY=your_google_geocoding_key
USE_GOOGLE_FALLBACK=false

# Twilio (for OTP/Phone Verification)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_sid
TWILIO_PHONE_NUMBER=your_twilio_number

# Object Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=orbicheck

# External APIs
NOMINATIM_URL=https://nominatim.openstreetmap.org
DISPOSABLE_LIST_URL=https://raw.githubusercontent.com/disposable/disposable-email-domains/master/domains.json
VIES_WSDL_URL=https://ec.europa.eu/taxation_customs/vies/checkVatService.wsdl

# Monitoring/Error Tracking
SENTRY_DSN=your_sentry_dsn

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here
SESSION_SECRET=your_session_secret

# Data Retention & Rate Limiting
RETENTION_DAYS=90
RATE_LIMIT_COUNT=30000

# OIDC Configuration (Optional)
OIDC_ENABLED=false
OIDC_CLIENT_ID=your_oidc_client_id
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_PROVIDER_URL=https://your-oidc-provider.com
OIDC_REDIRECT_URI=http://localhost:8080/auth/callback

# Production Environment Variables (for Docker Compose)
# POSTGRES_PASSWORD=your_postgres_password
# MINIO_ACCESS_KEY=your_minio_access_key
# MINIO_SECRET_KEY=your_minio_secret_key
# GLITCHTIP_SECRET=your_glitchtip_secret